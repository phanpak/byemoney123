---
const currentYear = new Date().getFullYear();

const socialLinks = [
  { href: 'https://instagram.com/adieulargent', label: 'Instagram', abbr: 'IG' },
  { href: 'https://twitter.com/adieulargent', label: 'Twitter', abbr: 'TW' },
  { href: './contact', label: 'Contact', abbr: 'CT' },
];

const footerLinks = [
  { href: './about', label: 'About' },
  { href: './privacy', label: 'Privacy' },
  { href: './terms', label: 'Terms' },
];
---

<footer class="footer">
  <!-- Top section with big text -->
  <div class="footer-top" data-animate>
    <div class="footer-marquee" aria-hidden="true">
      <div class="footer-marquee-track">
        <span>bye money</span>
        <span class="footer-marquee-dot"></span>
        <span>bye money</span>
        <span class="footer-marquee-dot"></span>
        <span>bye money</span>
        <span class="footer-marquee-dot"></span>
        <span>bye money</span>
        <span class="footer-marquee-dot"></span>
      </div>
    </div>
  </div>

  <!-- Main footer content -->
  <div class="footer-main">
    <div class="footer-content">
      <!-- Left: Logo and tagline -->
      <div class="footer-brand" data-animate>
        <a href="./" class="footer-logo" data-magnetic>
          <svg viewBox="0 0 40 40" fill="none" class="footer-logo-icon">
            <circle cx="20" cy="20" r="19" stroke="currentColor" stroke-width="1.5"/>
            <path d="M14 20h12M20 14v12" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
          </svg>
          <span class="footer-logo-text">bye money</span>
        </a>
        <p class="footer-tagline">
          Obsessively curated products for those who appreciate the finer things.
        </p>
      </div>

      <!-- Center: Navigation -->
      <nav class="footer-nav" data-animate-stagger>
        <h4 class="footer-nav-title">Navigate</h4>
        {footerLinks.map((link) => (
          <a href={link.href} class="footer-nav-link" data-magnetic>
            {link.label}
          </a>
        ))}
      </nav>

      <!-- Right: Social -->
      <div class="footer-social" data-animate-stagger>
        <h4 class="footer-social-title">Connect</h4>
        <div class="footer-social-links">
          {socialLinks.map((link) => (
            <a
              href={link.href}
              class="footer-social-link"
              target={link.href.startsWith('http') ? '_blank' : undefined}
              rel={link.href.startsWith('http') ? 'noopener noreferrer' : undefined}
              data-magnetic
            >
              <span class="social-label">{link.label}</span>
              <span class="social-abbr">{link.abbr}</span>
              <svg width="12" height="12" viewBox="0 0 12 12" fill="none" class="social-arrow">
                <path d="M3.5 8.5L8.5 3.5M8.5 3.5H4.5M8.5 3.5V7.5" stroke="currentColor" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </a>
          ))}
        </div>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="footer-bottom">
      <div class="footer-bottom-left">
        <span class="footer-copyright">© {currentYear}</span>
        <span class="footer-separator">·</span>
        <span class="footer-credit">
          Crafted by <a href="./contact" class="footer-credit-link" data-magnetic>Mathieu Lebreton</a>
        </span>
      </div>
      <div class="footer-bottom-right">
        <span class="footer-location">Paris, France</span>
        <span class="footer-time" id="footer-time"></span>
      </div>
    </div>
  </div>

  <!-- Back to top button -->
  <button class="back-to-top" data-back-to-top data-magnetic aria-label="Back to top">
    <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
      <path d="M8 12V4M8 4L4 8M8 4L12 8" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
  </button>
</footer>

<style>
  .footer {
    position: relative;
    background: var(--color-bg);
    border-top: 1px solid rgba(245, 240, 232, 0.06);
    overflow: hidden;
  }

  /* Marquee section */
  .footer-top {
    padding: 3rem 0;
    border-bottom: 1px solid rgba(245, 240, 232, 0.06);
    overflow: hidden;
  }

  .footer-marquee {
    overflow: hidden;
  }

  .footer-marquee-track {
    display: flex;
    align-items: center;
    gap: 3rem;
    white-space: nowrap;
    animation: footerMarquee 25s linear infinite;
  }

  .footer-marquee-track span {
    font-family: var(--font-display);
    font-size: clamp(3rem, 8vw, 6rem);
    font-weight: 600;
    color: var(--color-cream);
    letter-spacing: -0.04em;
    opacity: 0.06;
  }

  .footer-marquee-dot {
    width: 12px !important;
    height: 12px;
    background: var(--color-gold);
    border-radius: 50%;
    flex-shrink: 0;
    opacity: 0.3 !important;
  }

  @keyframes footerMarquee {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  /* Main footer */
  .footer-main {
    max-width: 1600px;
    margin: 0 auto;
    padding: 4rem 2rem 2rem;
  }

  .footer-content {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr;
    gap: 4rem;
    margin-bottom: 4rem;
    padding-bottom: 3rem;
    border-bottom: 1px solid rgba(245, 240, 232, 0.06);
  }

  /* Brand section */
  .footer-brand {
    max-width: 300px;
  }

  .footer-logo {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    color: var(--color-cream);
    margin-bottom: 1.5rem;
  }

  .footer-logo-icon {
    width: 32px;
    height: 32px;
  }

  .footer-logo-text {
    font-family: var(--font-display);
    font-size: 1.125rem;
    font-weight: 500;
    letter-spacing: -0.02em;
  }

  .footer-tagline {
    font-family: var(--font-body);
    font-size: 0.9375rem;
    color: var(--color-text-muted);
    line-height: 1.7;
  }

  /* Navigation */
  .footer-nav {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer-nav-title,
  .footer-social-title {
    font-family: var(--font-body);
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--color-gold);
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin-bottom: 0.5rem;
  }

  .footer-nav-link {
    font-family: var(--font-body);
    font-size: 0.9375rem;
    color: var(--color-text-muted);
    transition: color 0.3s ease;
    width: fit-content;
  }

  .footer-nav-link:hover {
    color: var(--color-cream);
  }

  /* Social */
  .footer-social {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer-social-links {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer-social-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-body);
    font-size: 0.9375rem;
    color: var(--color-text-muted);
    transition: color 0.3s ease;
    width: fit-content;
  }

  .footer-social-link:hover {
    color: var(--color-cream);
  }

  .social-abbr {
    font-family: var(--font-display);
    font-size: 0.6875rem;
    color: var(--color-text-subtle);
    padding: 0.25rem 0.5rem;
    background: rgba(245, 240, 232, 0.03);
    border-radius: var(--radius-sm);
    margin-left: 0.25rem;
  }

  .social-arrow {
    opacity: 0;
    transform: translate(-4px, 4px);
    transition: all 0.3s var(--ease-out-expo);
  }

  .footer-social-link:hover .social-arrow {
    opacity: 1;
    transform: translate(0, 0);
  }

  /* Bottom bar */
  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .footer-bottom-left {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-family: var(--font-body);
    font-size: 0.8125rem;
    color: var(--color-text-subtle);
  }

  .footer-separator {
    opacity: 0.3;
  }

  .footer-credit-link {
    color: var(--color-cream);
    transition: color 0.3s ease;
  }

  .footer-credit-link:hover {
    color: var(--color-gold);
  }

  .footer-bottom-right {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    font-family: var(--font-body);
    font-size: 0.8125rem;
    color: var(--color-text-subtle);
  }

  .footer-time {
    font-family: var(--font-display);
    color: var(--color-gold);
    opacity: 0.6;
  }

  /* Back to top */
  .back-to-top {
    position: absolute;
    right: 2rem;
    bottom: 2rem;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(245, 240, 232, 0.03);
    border: 1px solid rgba(245, 240, 232, 0.08);
    border-radius: 50%;
    color: var(--color-cream);
    transition: all 0.4s var(--ease-out-expo);
  }

  .back-to-top:hover {
    background: var(--color-gold);
    border-color: var(--color-gold);
    color: var(--color-bg);
    transform: translateY(-4px);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .footer-main {
      padding: 3rem 1.5rem 1.5rem;
    }

    .footer-content {
      grid-template-columns: 1fr;
      gap: 2.5rem;
    }

    .footer-brand {
      max-width: none;
    }

    .footer-bottom {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }

    .footer-bottom-left,
    .footer-bottom-right {
      flex-wrap: wrap;
      justify-content: center;
    }

    .back-to-top {
      right: 1rem;
      bottom: 5rem;
    }
  }
</style>

<script>
  // Update time
  function updateTime() {
    const timeEl = document.getElementById('footer-time');
    if (timeEl) {
      const now = new Date();
      const hours = now.getHours().toString().padStart(2, '0');
      const minutes = now.getMinutes().toString().padStart(2, '0');
      timeEl.textContent = `${hours}:${minutes}`;
    }
  }

  updateTime();
  setInterval(updateTime, 60000);

  // Back to top
  const backToTop = document.querySelector('[data-back-to-top]');

  backToTop?.addEventListener('click', () => {
    window.scrollTo({
      top: 0,
      behavior: 'smooth'
    });
  });
</script>
