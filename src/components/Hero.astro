---
// Hero Section - The "Wow" Moment
// Massive typography with split-text animation
---

<section class="hero" data-hero>
  <!-- Background depth layers -->
  <div class="hero-bg">
    <div class="hero-bg-gradient" data-parallax-speed="0.3"></div>
    <div class="hero-bg-grid" data-parallax-speed="0.15"></div>
  </div>

  <!-- Main content -->
  <div class="hero-content">
    <!-- Massive typography -->
    <h1 class="hero-title">
      <span class="hero-line" data-hero-line data-parallax-speed="1.2">
        <span class="hero-word">
          {'bye'.split('').map((char, i) => (
            <span class="hero-char" style={`--char-i: ${i}`}>{char}</span>
          ))}
        </span>
      </span>
      <span class="hero-line hero-line--outline" data-hero-line data-parallax-speed="0.8">
        <span class="hero-word">
          {'money'.split('').map((char, i) => (
            <span class="hero-char" style={`--char-i: ${i + 3}`}>{char}</span>
          ))}
        </span>
      </span>
    </h1>

    <!-- Tagline -->
    <p class="hero-tagline" data-hero-tagline data-parallax-speed="0.5">
      <span class="hero-tagline-line">Obsessively curated products</span>
      <span class="hero-tagline-line">for those who appreciate the finer things.</span>
    </p>

    <!-- Scroll indicator -->
    <div class="hero-scroll" data-hero-scroll>
      <span class="hero-scroll-text">Scroll</span>
      <div class="hero-scroll-line">
        <div class="hero-scroll-dot"></div>
      </div>
    </div>
  </div>

  <!-- Floating accent elements - Different parallax speeds create depth -->
  <div class="hero-accents" aria-hidden="true">
    <div class="hero-accent hero-accent--1" data-parallax-speed="0.4"></div>
    <div class="hero-accent hero-accent--2" data-parallax-speed="0.6"></div>
    <div class="hero-accent hero-accent--3" data-parallax-speed="0.2"></div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    padding: 2rem;
  }

  /* Background layers */
  .hero-bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .hero-bg-gradient {
    position: absolute;
    inset: 0;
    background: radial-gradient(
      ellipse 80% 60% at 50% 40%,
      rgba(201, 162, 39, 0.08) 0%,
      transparent 60%
    );
  }

  .hero-bg-grid {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(245, 240, 232, 0.02) 1px, transparent 1px),
      linear-gradient(90deg, rgba(245, 240, 232, 0.02) 1px, transparent 1px);
    background-size: 80px 80px;
    mask-image: radial-gradient(ellipse 70% 50% at 50% 50%, black 20%, transparent 70%);
    -webkit-mask-image: radial-gradient(ellipse 70% 50% at 50% 50%, black 20%, transparent 70%);
  }

  /* Content */
  .hero-content {
    position: relative;
    z-index: 2;
    text-align: center;
    max-width: 1400px;
  }

  /* Massive title */
  .hero-title {
    font-family: var(--font-display);
    font-size: clamp(100px, 22vw, 320px);
    font-weight: 600;
    line-height: 0.82;
    letter-spacing: -0.04em;
    margin-bottom: 2rem;
  }

  .hero-line {
    display: block;
    overflow: hidden;
  }

  .hero-word {
    display: inline-block;
  }

  /* Split-text characters */
  .hero-char {
    display: inline-block;
    color: var(--color-cream);
    transform: translateY(120%) rotateX(-80deg);
    transform-origin: center bottom;
    opacity: 0;
    transform-style: preserve-3d;
    animation: heroCharReveal 1s var(--ease-out-expo) forwards;
    animation-delay: calc(0.8s + var(--char-i) * 0.04s);
  }

  @keyframes heroCharReveal {
    to {
      transform: translateY(0) rotateX(0);
      opacity: 1;
    }
  }

  /* Outline variant */
  .hero-line--outline .hero-char {
    -webkit-text-stroke: 2px var(--color-cream);
    -webkit-text-fill-color: transparent;
    color: transparent;
  }

  :global([data-theme="light"]) .hero-line--outline .hero-char {
    -webkit-text-stroke: 2px var(--color-cream);
  }

  /* Tagline */
  .hero-tagline {
    font-family: var(--font-body);
    font-size: clamp(1rem, 1.5vw, 1.25rem);
    color: var(--color-text-muted);
    letter-spacing: 0.02em;
    line-height: 1.6;
    max-width: 500px;
    margin: 0 auto 4rem;
  }

  .hero-tagline-line {
    display: block;
    opacity: 0;
    transform: translateY(20px);
    animation: taglineReveal 0.8s var(--ease-out-expo) forwards;
  }

  .hero-tagline-line:nth-child(1) {
    animation-delay: 1.4s;
  }

  .hero-tagline-line:nth-child(2) {
    animation-delay: 1.5s;
  }

  @keyframes taglineReveal {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Scroll indicator */
  .hero-scroll {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    opacity: 0;
    animation: scrollReveal 0.8s var(--ease-out-expo) forwards;
    animation-delay: 1.8s;
  }

  @keyframes scrollReveal {
    to {
      opacity: 1;
    }
  }

  .hero-scroll-text {
    font-family: var(--font-body);
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--color-text-subtle);
    letter-spacing: 0.15em;
    text-transform: uppercase;
  }

  .hero-scroll-line {
    width: 1px;
    height: 60px;
    background: rgba(245, 240, 232, 0.15);
    position: relative;
    overflow: hidden;
  }

  .hero-scroll-dot {
    position: absolute;
    top: 0;
    left: 50%;
    width: 5px;
    height: 5px;
    background: var(--color-gold);
    border-radius: 50%;
    transform: translateX(-50%);
    animation: scrollDot 2s ease-in-out infinite;
  }

  @keyframes scrollDot {
    0%, 100% {
      top: 0;
      opacity: 0;
    }
    10% {
      opacity: 1;
    }
    90% {
      opacity: 1;
    }
    100% {
      top: 100%;
      opacity: 0;
    }
  }

  /* Floating accents */
  .hero-accents {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 1;
  }

  .hero-accent {
    position: absolute;
    border-radius: 50%;
    filter: blur(100px);
    opacity: 0;
    animation: accentReveal 1.5s var(--ease-out-expo) forwards;
  }

  @keyframes accentReveal {
    to {
      opacity: 1;
    }
  }

  .hero-accent--1 {
    width: 400px;
    height: 400px;
    background: rgba(201, 162, 39, 0.15);
    top: 10%;
    right: 5%;
    animation-delay: 1.2s;
  }

  .hero-accent--2 {
    width: 300px;
    height: 300px;
    background: rgba(201, 162, 39, 0.1);
    bottom: 20%;
    left: 10%;
    animation-delay: 1.4s;
  }

  .hero-accent--3 {
    width: 200px;
    height: 200px;
    background: rgba(245, 240, 232, 0.05);
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    animation-delay: 1.6s;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero-title {
      font-size: clamp(60px, 18vw, 120px);
    }

    .hero-tagline {
      font-size: 0.9375rem;
    }

    .hero-accent--1,
    .hero-accent--2 {
      display: none;
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .hero-char,
    .hero-tagline-line,
    .hero-scroll,
    .hero-accent {
      animation: none;
      opacity: 1;
      transform: none;
    }

    .hero-scroll-dot {
      animation: none;
    }
  }
</style>
