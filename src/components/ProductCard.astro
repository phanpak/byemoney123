---
interface Props {
  name: string;
  brand: string;
  price: string;
  category: string;
  image: string;
  slug: string;
  externalUrl: string;
  index?: number;
}

const { name, brand, price, category, image, slug, externalUrl, index = 0 } = Astro.props;
---

<article
  class="product-card"
  data-category={category.toLowerCase()}
  data-card-scroll
  style={`--index: ${index}; --card-index: ${index};`}
>
  <!-- Gradient shimmer effect -->
  <div class="card-shimmer"></div>

  <!-- Border glow on hover -->
  <div class="card-border-glow"></div>

  <!-- Main card content -->
  <a href={`./item/${slug}`} class="card-inner" data-tilt>
    <!-- Image container -->
    <div class="card-image-wrapper">
      <div class="card-image-bg"></div>
      <img
        src={image}
        alt={`${brand} ${name}`}
        loading="lazy"
        class="card-image"
      />
      <!-- Floating shadow -->
      <div class="card-image-shadow"></div>
    </div>

    <!-- Product info overlay -->
    <div class="card-info">
      <div class="card-info-top">
        <span class="card-category">{category}</span>
        <span class="card-index">#{String(index + 1).padStart(2, '0')}</span>
      </div>
      <div class="card-info-bottom">
        <div class="card-details">
          <span class="card-brand">{brand}</span>
          <h3 class="card-name">{name}</h3>
        </div>
        <span class="card-price">{price}</span>
      </div>
    </div>

    <!-- Hover indicator line -->
    <div class="card-line"></div>
  </a>

  <!-- External link button -->
  <a
    href={externalUrl}
    class="card-external"
    target="_blank"
    rel="noopener noreferrer"
    aria-label={`Buy ${name}`}
    data-magnetic
  >
    <svg width="14" height="14" viewBox="0 0 14 14" fill="none">
      <path d="M4 10L10 4M10 4H5M10 4V9" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
  </a>
</article>

<style>
  .product-card {
    --card-radius: 20px;

    position: relative;
    aspect-ratio: 1;
    border-radius: var(--card-radius);
    background: var(--color-bg-card);
    overflow: hidden;

    /* Entrance animation */
    opacity: 0;
    transform: translateY(60px) scale(0.95);
    animation: cardEntrance 0.8s var(--ease-out-expo) forwards;
    animation-delay: calc(var(--index) * 0.05s + 0.3s);
  }

  @keyframes cardEntrance {
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  /* Shimmer effect */
  .card-shimmer {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      transparent 0%,
      rgba(201, 162, 39, 0.03) 25%,
      rgba(201, 162, 39, 0.08) 50%,
      rgba(201, 162, 39, 0.03) 75%,
      transparent 100%
    );
    opacity: 0;
    transform: translateX(-100%);
    transition: opacity 0.4s ease;
    pointer-events: none;
    z-index: 1;
  }

  .product-card:hover .card-shimmer {
    opacity: 1;
    animation: shimmerMove 1.5s ease-out;
  }

  @keyframes shimmerMove {
    to {
      transform: translateX(100%);
    }
  }

  /* Border glow */
  .card-border-glow {
    position: absolute;
    inset: 0;
    border-radius: var(--card-radius);
    padding: 1px;
    background: linear-gradient(
      135deg,
      transparent 0%,
      rgba(201, 162, 39, 0.3) 50%,
      transparent 100%
    );
    -webkit-mask:
      linear-gradient(#fff 0 0) content-box,
      linear-gradient(#fff 0 0);
    mask:
      linear-gradient(#fff 0 0) content-box,
      linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    opacity: 0;
    transition: opacity 0.5s ease;
    pointer-events: none;
    z-index: 2;
  }

  .product-card:hover .card-border-glow {
    opacity: 1;
  }

  /* Card inner */
  .card-inner {
    position: relative;
    display: flex;
    flex-direction: column;
    height: 100%;
    padding: 1.25rem;
    z-index: 3;
    transition: transform 0.5s var(--ease-out-expo);
  }

  /* Image wrapper */
  .card-image-wrapper {
    position: relative;
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1rem;
  }

  .card-image-bg {
    position: absolute;
    inset: 10%;
    background: radial-gradient(
      ellipse at center,
      rgba(201, 162, 39, 0.06) 0%,
      transparent 70%
    );
    border-radius: 50%;
    opacity: 0;
    transform: scale(0.8);
    transition: all 0.6s var(--ease-out-expo);
  }

  .product-card:hover .card-image-bg {
    opacity: 1;
    transform: scale(1);
  }

  .card-image {
    position: relative;
    max-width: 70%;
    max-height: 70%;
    object-fit: contain;
    filter: drop-shadow(0 10px 30px rgba(0, 0, 0, 0.3));
    transition:
      transform 0.6s var(--ease-out-expo),
      filter 0.6s ease;
    z-index: 2;
  }

  .product-card:hover .card-image {
    transform: translateY(-15px) scale(1.05);
    filter: drop-shadow(0 25px 50px rgba(0, 0, 0, 0.4));
  }

  /* Image shadow */
  .card-image-shadow {
    position: absolute;
    bottom: 5%;
    left: 50%;
    width: 50%;
    height: 20px;
    background: radial-gradient(
      ellipse at center,
      rgba(0, 0, 0, 0.4) 0%,
      transparent 70%
    );
    transform: translateX(-50%);
    filter: blur(15px);
    opacity: 0;
    transition: opacity 0.6s ease;
    z-index: 1;
  }

  .product-card:hover .card-image-shadow {
    opacity: 1;
  }

  /* Card info */
  .card-info {
    position: relative;
    z-index: 3;
  }

  .card-info-top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.75rem;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid rgba(245, 240, 232, 0.06);
  }

  .card-category {
    font-family: var(--font-body);
    font-size: 0.6875rem;
    font-weight: 500;
    color: var(--color-gold);
    letter-spacing: 0.08em;
    text-transform: uppercase;
  }

  .card-index {
    font-family: var(--font-display);
    font-size: 0.6875rem;
    color: var(--color-text-subtle);
  }

  .card-info-bottom {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    gap: 1rem;
  }

  .card-details {
    flex: 1;
    min-width: 0;
  }

  .card-brand {
    display: block;
    font-family: var(--font-body);
    font-size: 0.75rem;
    color: var(--color-text-muted);
    margin-bottom: 0.25rem;
  }

  .card-name {
    font-family: var(--font-display);
    font-size: 1rem;
    font-weight: 500;
    color: var(--color-cream);
    line-height: 1.3;
    letter-spacing: -0.01em;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin: 0;
    transition: color 0.3s ease;
  }

  .product-card:hover .card-name {
    color: var(--color-gold);
  }

  .card-price {
    font-family: var(--font-display);
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--color-cream);
    white-space: nowrap;
    /* Floating animation - prices feel weightless, ready to "fly away" */
    animation: priceFloat 4s ease-in-out infinite;
    animation-delay: calc(var(--index) * 0.2s);
    transition: transform 0.3s var(--ease-out-expo), text-shadow 0.3s ease;
  }

  @keyframes priceFloat {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-3px);
    }
  }

  /* Price lifts more dramatically on hover */
  .product-card:hover .card-price {
    transform: translateY(-5px);
    text-shadow: 0 4px 12px rgba(201, 162, 39, 0.3);
    animation-play-state: paused;
  }

  /* Hover line */
  .card-line {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, var(--color-gold), var(--color-gold-light));
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.5s var(--ease-out-expo);
  }

  .product-card:hover .card-line {
    transform: scaleX(1);
  }

  /* External link button */
  .card-external {
    position: absolute;
    top: 1rem;
    right: 1rem;
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(245, 240, 232, 0.05);
    border: 1px solid rgba(245, 240, 232, 0.1);
    border-radius: 50%;
    color: var(--color-cream);
    z-index: 10;
    opacity: 0;
    transform: translateY(-10px);
    transition: all 0.4s var(--ease-out-expo);
  }

  .product-card:hover .card-external {
    opacity: 1;
    transform: translateY(0);
  }

  .card-external:hover {
    background: var(--color-gold);
    border-color: var(--color-gold);
    color: var(--color-bg);
    transform: scale(1.1);
  }

  /* Hidden state for filtering */
  .product-card.hidden {
    display: none;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .card-inner {
      padding: 1rem;
    }

    .card-name {
      font-size: 0.9375rem;
    }
  }
</style>

<script>
  // 3D tilt effect on hover
  document.querySelectorAll('.product-card').forEach(card => {
    const inner = card.querySelector('.card-inner') as HTMLElement;

    card.addEventListener('mousemove', (e) => {
      const rect = card.getBoundingClientRect();
      const x = (e as MouseEvent).clientX - rect.left;
      const y = (e as MouseEvent).clientY - rect.top;

      const centerX = rect.width / 2;
      const centerY = rect.height / 2;

      const rotateX = (y - centerY) / 20;
      const rotateY = (centerX - x) / 20;

      if (inner) {
        inner.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg) scale3d(1.02, 1.02, 1.02)`;
      }
    });

    card.addEventListener('mouseleave', () => {
      if (inner) {
        inner.style.transform = 'perspective(1000px) rotateX(0) rotateY(0) scale3d(1, 1, 1)';
      }
    });
  });
</script>
